<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.galaxy.voicealarm.ChangeAlarm"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:gravity="center">

    <Button
        android:id="@+id/OutputTimeC"
        android:onClick="InputTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#000435"
        android:textSize="30dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <ToggleButton
            android:id="@+id/MonC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/monon"
            android:checked="true"
            android:textOn=" "
            android:textOff=" "/>
        <ToggleButton
            android:id="@+id/TueC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/tueon"
            android:checked="true"
            android:textOn=" "
            android:textOff=" "/>
        <ToggleButton
            android:id="@+id/WedC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/wedon"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/ThuC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/thuon"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/FriC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/frion"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/SatC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/saton"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/SunC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/sunon"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>

    </LinearLayout>
    <RadioGroup
        android:id="@+id/SelectTypeC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/AutoC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="가져오기" />

        <RadioButton
            android:id="@+id/HandC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="직접쓰기" />
    </RadioGroup>
    <EditText
        android:id="@+id/SpeakedC"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize ="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/edittextoff"
        android:enabled="false"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/OutputMusic"
            android:onClick="InputMusicC"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="#000435"
            android:text="음악 선택"
            android:textSize="15dp"
            android:textColor="#ffffff"/>
        <Button
            android:onClick="PlayMusicC"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="들어보기"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <ImageButton
            android:onClick="Change"
            android:layout_marginTop="13dp"
            android:src="@drawable/ok"
            android:background="@null"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:onClick="Delete"
            android:layout_marginTop="13dp"
            android:src="@drawable/delete"
            android:background="@null"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>