<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.galaxy.voicealarm.ChangeAlarm"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:gravity="center">

    <Button
        android:id="@+id/OutputTimeC"
        android:onClick="InputTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000435"
        android:textSize="30dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <ToggleButton
            android:id="@+id/MonC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/monon"
            android:checked="true"
            android:textOn=" "
            android:textOff=" "/>
        <ToggleButton
            android:id="@+id/TueC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/tueon"
            android:checked="true"
            android:textOn=" "
            android:textOff=" "/>
        <ToggleButton
            android:id="@+id/WedC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/wedon"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/ThuC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/thuon"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/FriC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/frion"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/SatC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/saton"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/SunC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/sunon"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>

    </LinearLayout>
    <RadioGroup
        android:id="@+id/SelectTypeC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/AutoC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="일정 + 명언" />

        <RadioButton
            android:id="@+id/HandC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="일정 + 지정문" />
        <LinearLayout
            android:id="@+id/BlinkC"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/contents"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/SpeakedC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize ="30dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <RadioButton
            android:id="@+id/NoneC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="명언" />
    </RadioGroup>
    <Button
        android:id="@+id/OutputMusicC"
        android:onClick="InputMusicC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000435"
        android:text="음악을 선세요."
        android:textSize="30dp"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:weightSum="1">
        <Button
            android:onClick="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="변경"
            android:textSize="30dp"/>
        <Button
            android:onClick="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="취소"
            android:textSize="30dp"/>
        <Button
            android:onClick="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="삭제"
            android:textSize="30dp"/>
    </LinearLayout>
</LinearLayout>