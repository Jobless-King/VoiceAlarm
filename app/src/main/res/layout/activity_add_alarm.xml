<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.galaxy.voicealarm.AddAlarm"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:gravity="center">

    <Button
        android:id="@+id/OutputTime"
        android:onClick="InputTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000435"
        android:text="시간을 선택하세요."
        android:textSize="30dp"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <ToggleButton
            android:id="@+id/Mon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/monon"
            android:checked="true"
            android:textOn=" "
            android:textOff=" "/>
        <ToggleButton
            android:id="@+id/Tue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/tueon"
            android:checked="true"
            android:textOn=" "
            android:textOff=" "/>
        <ToggleButton
            android:id="@+id/Wed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/wedon"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/Thu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/thuon"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/Fri"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/frion"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/Sat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/saton"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>
        <ToggleButton
            android:id="@+id/Sun"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/sunon"
            android:checked="true"
            android:textOn=""
            android:textOff=""/>

    </LinearLayout>
    <RadioGroup
        android:id="@+id/SelectType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="일정 + 명언" />

        <RadioButton
            android:id="@+id/Hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="일정 + 지정문" />
        <LinearLayout
            android:id="@+id/Blink"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/contents"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/Speaked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize ="30dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <RadioButton
            android:id="@+id/None"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="명언" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/OutputMusic"
            android:onClick="InputMusic"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="#000435"
            android:text="음악 선택"
            android:textSize="30dp"
            android:textColor="#ffffff"/>
        <Button
            android:onClick="PlayMusic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="들어보기"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:weightSum="1">
        <Button
            android:onClick="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:text="등록"
            android:textSize="30dp"
            android:layout_weight="0.50" />
        <Button
            android:onClick="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="취소"
            android:textSize="30dp"
            android:layout_weight="0.50" />
    </LinearLayout>
</LinearLayout>
